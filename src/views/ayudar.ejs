<%- include('partials/head'); %>
<%- include('partials/header'); %>

<div class="content__container" id="content__container">
    <main>
        <div class="refugiomenu">
            <div class="separador-izquierdo">
                <img src="../content_edit/img/separadores/separador_izq.png" alt="imagen separadora de section">
            </div>
            <div class="refugiomenu__text">
                <img src="../content_edit/img/separadores/icono_pata.png" alt="Icono de pata de perro">
                <h1>Refugios</h1>
                <h2>Que necesitan de tu ayuda</h2>
            </div>
            <div class="separador-derecho">
                <img src="../content_edit/img/separadores/separador_der.png" alt="imagen separadora de section">
            </div>
        </div>
   
       
       
        <div class="refugiomenu__cards">
            <% for(i = 0; i < refugios.length; i++) { %>
            <div class="refugiomenu__cards-card">
                <div class="category">Refugios - Ayuda</div>
                <h3><%= refugios[i].nombrerefu %></h3>
                <img src="<%= refugios[i].imagen1 %>" alt="foto de perros en refugio">
                <p><%= refugios[i].textarea1.substring(0, 114) %></p>
                <h4>Ubicación</h4>
                <img src="../public/img_static/refugiomenu/mapa.png" alt="foto de mapa del refugio">
                <a href="./refugioscard">
                    <div class="btn">
                        <a href="/refugioscard/<%= refugios[i].id %>">
                        <img src="../public/img_static/refugiomenu/pata_btn.png" alt="Icono pata de perro">
                        <h4>Quiero Ayudar</h4>
                    </a>
                    </div>
                </a>
            </div>
            <%  } %>
        </div>
       
    </main>
</div>
<section class="refugios">
    <div class="refugios__container">
        <div class="refugios__container-img">
            <img src="../content_edit/img/section4/casaperro.png" alt="Casa de Perro en 3D"
                class="refugio__container-img-mobile">
            <img src="../content_edit/img/section4/casaperrodesktop.png" alt="Casa de Perro en 3D"
                class="refugios__container-img-desktop">

        </div>
        <div class="refugios__container-text">
            <h2>Con tu Donación ayudas a un Lomito</h2>
